{% extends "simple_template.html.twig" %} 

{% block simplepage %}

<div class="row h-100 justify-content-center">  
<!--Section 1 left part-->
    <div class="custom_section col-lg-6 d-flex justify-content-center align-items-center bg-light">
        <div class="container w-100 h-75" > 
            <div class="custom_bg_s1_col1 row h-100 text-center">
                <div class="col-md-12 m-auto p-0 bg-primary ">
                    <h2 class="text-dark">{{title}}</h2>
                </div>              
            </div>  
        </div>
    </div>
    <!--Section 1 right part-->
    <div class="custom_section col-lg-6 d-flex justify-content-center align-items-center bg-light">
        <div class="container w-100 h-75" >          
            <div class="custom_bg_s1_col2 row h-100 text-center bg-light">
                <div class="col-lg-12 m-auto">
                    <h2 class="mb-4 text-primary">Et Hop !<br> en 30s tu auras de nouveau accès à ton espace &#128522</h2>
                    <form class="" method="POST" action="index.php?controller=home&action=updatePassword&param={{token}}">
                        <div class="form-group">
                            <label class="col-form-label" for="email">Entre ton email</label>        
                            <input type="email" placeholder="identifiant email" name="email" id="email" required>
                        </div>
                        <div class="form-group">    
                            <label class="col-form-label" for="password">Entre ton nouveau mot de passe</label>        
                            <input type="password"  placeholder="mot de passe" name="password" id="password" required>
                            <label class="col-form-label" for="password2">Confirme ton nouveau mot de passe</label>        
                            <input type="password"  placeholder="mot de passe" name="password2" id="password2" required>  
                            <input type="hidden" name="token" value="{{token}}" required>      
                        </div>       
                         
                        <button class="btn btn-primary" type="submit">Je valide</button>   
                    </form> 
                </div>              
            </div>  
        </div>
    </div>
</div>

{% endblock %}