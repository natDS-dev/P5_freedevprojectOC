{% extends "admin_template.html.twig" %}
{% block section1L %}

<div class="container w-75 h-50" >          
  <div class="row h-100 text-center" >
    <div class="col-md-12 m-auto">
      <h3>Titre section 1</h3>
      <p class="text-center">
      </p>
    </div>              
  </div>  
</div>
{% endblock %} 

{% block section1R %}
<div class="container-fluid h-100 px-0">          
  <div class="custom_admin_bg_adds_create row h-100 pb-5 justify-content-center align-items-center">
    <div class="col-lg-12 m-auto">
      <div class="col-lg-6 h-25 pb-1 m-auto text-center "> 
        <h3>Créer une annonce</h3>
      </div>
      <div  class="col-lg-12 h-75 px-0">                  
        <form class="col-12 px-2" method="POST" action="index.php?controller=adds&action=create">
          <div class="form-group">
            <label for="title"></label>
            <select class="form-control" name="title" id="title" required >
            <option value="Jardinage">Jardinage / Entretien espace extérieur</option>
            <option value="Bricolage">Bricolage / Réparation</option>
            <option value="Proximité">Entretien domicile (ménage/nettoyage vitre etc.)</option>
            <option value="Garde">Garde exceptionnelle d'enfant(s)</option>
            <option value="Administratif">Aide administrative (démarches/courrier etc.)</option>
            <option value="Cours">Cours / Soutien scolaire / Aide informatique etc.</option>
            <option value="Transport">Déplacement / Co-voiturage</option>
            <option value="Animaux">Animal (garde/soin/promenade)</option>
            <option value="Autres">Autres</option>
            </select>
            {# <input class="form-control" type="text" placeholder="Titre" name="title" id="title" value="{{add.title}}" /> #}
          </div>
          <p>Si localisation différente de l'adresse enregistrée, précise cela dans la description</p>
          
          <div class="form-group">
            <label for="description"></label>
            <textarea class="form-control" placeholder="Description" name="description" id="description" required>{{add.description}}</textarea>
          </div>

          <div class="form-group col-12 d-flex
          p-0 text-center">
            <label for="basket_size" class="col-form-label col-3 p-1">Taille de panier</label>
            <select class="form-control col-3" name="basket_size" id="basket_size" required > 
              <option value="1"{% if add.basket_size == 1 %} selected{% endif %}>S</option>
              <option value="2"{% if add.basket_size == 2 %} selected{% endif %}>M</option>
              <option value="3"{% if add.basket_size == 3 %} selected{% endif %}>L</option>
            </select>
             <label for="basket_quantity" class="col-form-label col-3 p-1">Nombre de panier(s)</label>
            <input class="form-control col-3" type="number" min="1" name="basket_quantity" value="{{add.basket_quantity}}" id="basket_quantity" required />
          </div>
          <div class="form-group">  
            <input type="hidden" name="id" value="{{add.id}}"/>
          </div>
          <div class="row justify-content-center">
            <button class="btn btn-info mb-1" type="submit">Valider</button>
          </div>
        </form>
      </div>  
    </div>
  </div>
</div>
{% endblock %}
