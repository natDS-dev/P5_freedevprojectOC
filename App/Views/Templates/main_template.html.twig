  <body>
    {% include ("partials/header_front.html.twig") %}    
    <!--section 1-->

    <section class="custom_section container-fluid">
      <div class="row h-100">
        <div
          class="col-lg-6 d-flex justify-content-center align-items-center bg-success"
        >
          <div class="w-75 h-50 bg-white ">
            <p class="text-center">
            {% for log in logs %}
              <p class="alert {{log.alertBootstrap}}">
                {{log.message}} 
              </p> 
            {% endfor %}
            {% block content %}{% endblock %}</p>
          </div>
        </div>
        <div class="col-lg-6 bg-primary"></div>
      </div>
    </section>
    <!--section 2-->
    

    <!--footer-->
    {% include ("partials/footer.html.twig") %} 
